<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_playmusic"
    android:clickable="true"
    android:focusable="true"
    >
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:text="aaaaaaaaa"
        android:textColor="@color/color_red"
        android:textSize="@dimen/sp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_220"
        android:layout_marginTop="@dimen/dp_40"
        app:civ_border_color="@color/color_dark"
        app:civ_border_width="@dimen/dp_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewName"
        />
    <SeekBar
        android:id="@+id/seekBarSong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/textViewTimeSongPosition"
        app:layout_constraintRight_toLeftOf="@id/textViewTimeSongDuration"
        app:layout_constraintTop_toTopOf="@id/textViewTimeSongPosition"
        />
    <TextView
        android:id="@+id/textViewTimeSongPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_50"
        android:textColor="@color/color_dark"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonShuffle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/seekBarSong"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        />
    <TextView
        android:id="@+id/textViewTimeSongDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_5"
        android:textColor="@color/color_dark"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/seekBarSong"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewTimeSongPosition"
        />
    <ImageButton
        android:id="@+id/imageButtonShuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_shuffle_white_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTimeSongPosition"
        />
    <ImageButton
        android:id="@+id/imageButtonDownLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_file_download_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageButtonShuffle"
        />
    <ImageButton
        android:id="@+id/imageButtonLoopOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@android:color/transparent"
        android:src="@drawable/repeat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageButtonShuffle"
        />
    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@android:color/transparent"
        android:src="@drawable/button_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageButtonPlay"
        />
    <ImageButton
        android:id="@+id/imageButtonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/button_play"
        app:layout_constraintLeft_toRightOf="@id/imageButtonBack"
        app:layout_constraintRight_toLeftOf="@id/imageButtonPause"
        app:layout_constraintTop_toTopOf="@id/imageButtonBack"
        />
    <ImageButton
        android:id="@+id/imageButtonPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/button_pause"
        app:layout_constraintLeft_toRightOf="@id/imageButtonPlay"
        app:layout_constraintRight_toLeftOf="@id/imageButtonNext"
        app:layout_constraintTop_toTopOf="@id/imageButtonBack"
        />
    <ImageButton
        android:id="@+id/imageButtonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/button_next"
        app:layout_constraintLeft_toRightOf="@id/imageButtonPause"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageButtonBack"
        />
</android.support.constraint.ConstraintLayout>
